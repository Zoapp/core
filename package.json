{
  "name": "zoapp-core",
  "version": "0.2.3",
  "description": "Javascript ES7 helper/database framework to develop modern backend services using NodeJS",
  "author": "Mik BRY <mik@zoapp.com>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "clean-dist": "rm -r -f dist && mkdir dist",    
    "start:dev": "nodemon -w src --exec \"babel-node src\"",
    "build:dev": "babel src -s -D -d dist",
    "start:prod": "node dist",
    "build:prod": "yarn clean-dist && babel src -s -D -d dist && cp -f ./package.json ./dist/package.json && cp -f ./LICENSE ./dist/LICENSE && cp -f ./README.md ./dist/README.md",
    "lint:dev": "eslint src --rule 'no-console: off'",
    "lint:prod": "eslint src",
    "test": "./node_modules/.bin/mocha --compilers js:babel-core/register",
    "willPublish": "yarn run lint:prod && yarn run test && yarn run build:prod",
    "distribute": "yarn willPublish && npm publish ./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zoapp/core.git"
  },
  "homepage": "https://github.com/Zoapp/core",
  "bugs": {
    "url": "https://github.com/Zoapp/core/issues"
  },
  "keywords": [
    "Node",
    "ES7"
  ],
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=8.5.0"
  },
  "dependencies": {
    "mysql2": "^1.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-es2016": "^6.24.1",
    "chai": "^3.5.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "11.2.0",
    "eslint-plugin-import": "2.2.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0"
  }
}
